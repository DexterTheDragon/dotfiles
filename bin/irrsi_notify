#!/bin/sh

ssh $* ": > .irssi/fnotify ; tail -f .irssi/fnotify " |
sed -u 's/[<@&]//g' | while read heading message; do
    if [ "$message" != "" ]; then
        if [ -f ~/.receive.wav ]; then
            aplay -q ~/.receive.wav &
        fi
        /usr/bin/kdialog --title "${heading}" --passivepopup "${message}" 5;
    fi
done
