HISTSIZE=4096
SAVEHIST=4096

export EDITOR=vim
export VISUAL=vim
export LESS='-imJMWR'
export PAGER="less $LESS"
export MANPAGER=$PAGER

# utf-8 in the terminal, will break stuff if your term isn't utf aware
# LANG=en_US.UTF-8
# LC_ALL=$LANG
# LC_COLLATE=C

REPORTTIME=60       # Report time statistics for progs that take more than a minute to run
