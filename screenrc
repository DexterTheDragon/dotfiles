hardstatus alwayslastline "%{wk}%?%-Lw%?%{=b kR}[%{W}%n%f %t%?(%u)%?%{=b kR}]%{= kw}%?%+Lw%?%?%= %{G}[%H]%{Y}[%l]%{C}[%D %m/%d/%Y %C%a]"

